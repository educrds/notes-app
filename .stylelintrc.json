{
    "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
    "remarkConfig": {
        "plugins": [
          "stylelint-order"
        ],
        "rules": {
          "order/order": [
            "custom-properties",
            "declarations"
          ],
          "order/properties-order": [
            { "order/properties-alphabetical-order": true }
          ]
        }
      }
  }
  
